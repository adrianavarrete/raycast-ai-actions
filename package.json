{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "ai-actions",
  "title": "AI Actions",
  "description": "Make AI actions from your favorite LLMs directly from Raycast without logging in to their platforms",
  "icon": "command-icon.png",
  "author": "adria_navarrete",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "fix_grammar",
      "title": "FixGrammar",
      "description": "fix grammarfix grammarfix grammarfix grammar",
      "mode": "view",
      "icon": "command-icon.png",
      "preferences": [
        {
          "name": "prompt_fix_grammar",
          "title": "Fix grammar Prompt",
          "description": "The prompt for the fix grammar command",
          "type": "textfield",
          "default": "Fix that text",
          "required": false
        }
      ]
    },
    {
      "name": "summarize",
      "title": "Summarize",
      "description": "fix grammarfix grammarfix grammarfix grammar",
      "mode": "view",
      "icon": "command-icon.png",
      "preferences": [
        {
          "name": "prompt_summarize",
          "title": "Summarize Prompt",
          "description": "The prompt for the summarize command",
          "type": "textfield",
          "default": "Fix that text",
          "required": false
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.74.1",
    "openai": "^4.47.1"
  },
  "preferences": [
    {
      "name": "default_llm",
      "description": "default LLM for your AI Actions",
      "type": "dropdown",
      "data": [
        {
          "title": "OpenAI - GPT-3.5 Turbo",
          "value": "gpt-3.5-turbo"
        },
        {
          "title": "OpenAI - GPT-4o",
          "value": "gpt-4o"
        }
      ],
      "required": false,
      "title": "Default LLM for AI Actions"
    },
    {
      "name": "openai_apikey",
      "description": "Your OpenAI API Key",
      "type": "password",
      "required": false,
      "title": "OpenAI API Key"
    }
  ],
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}